<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.debitscredits.debitmaneger"
    android:installLocation="internalOnly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
       <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
      <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.STORAGE"/>



    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_logo"
        android:supportsRtl="true"
        android:debuggable="false"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="HardcodedDebugMode">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name="com.debitscredits.debitmaneger.ActivitySetRemaind"
            android:screenOrientation="portrait"/>
        <activity android:name="com.debitscredits.debitmaneger.ActivityTakenRemainder"
            android:screenOrientation="portrait"/>
        <activity android:name="com.debitscredits.debitmaneger.ActivityGivenRemainder"
            android:screenOrientation="portrait"/>
        <activity android:name="com.debitscredits.debitmaneger.ActivityFormForRemaind"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.debitscredits.debitmaneger.ActivityUserDashboard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityTakeMoney"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityGivelist"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityTakelist"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityReportDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityReport"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityGiveMoney"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityDeleteAndEdit"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.debitscredits.debitmaneger.ActivityBackup"
            android:screenOrientation="portrait" /> <!-- <activity android:name="net.rdrei.android.dirchooser.ActivityBackup"/> -->


    </application>

</manifest>